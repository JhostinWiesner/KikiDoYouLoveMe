<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tareaintegradora2apo.controller.ManualUsuarioController">
   <top>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manual del Usuario - SGMMS">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </Label>
   </top>
   <left>
      <VBox prefWidth="250.0" style="-fx-background-color: #ecf0f1;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-padding: 10;" text="Índice de Contenidos">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TreeView fx:id="arbolSecciones" prefHeight="400.0" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox spacing="10.0">
         <children>
            <TextArea fx:id="areaContenido" editable="false" prefHeight="400.0" style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #95a5a6;">
         <children>
            <Button fx:id="btnCerrar" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cerrar Manual" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>